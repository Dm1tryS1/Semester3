<h1>SignIn</h1>
<%= form_tag url_for(controller: :session, action: :create), method: 'post' do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br/>

    <%= label_tag :password %><br/>
    <%= password_field_tag :password %><br/>

    <%= submit_tag "Sign in" %>
<% end %><br>

<%= link_to 'Signup now!', signup_path %><br>
<%= link_to 'Back', root_path %>